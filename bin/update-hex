#!/bin/bash
# Usage: update-hex $GEM
set -e
if [ $# -lt 1 ]
then
  echo "Usage: $(basename $0) GEMS..."
  exit 1
fi

__update_dependency__() {
  echo -e "ğŸ§ª  \033[00mUpdating \033[0;31m$1\033[00m dependency..."
  mix deps.unlock $1 --quiet && \
    mix deps.update $1 --target --quiet

  mix test

  if [ $? -eq 0 ]; then
    __commit__ $1
  else
    __fail__ $1
  fi
}

__fail__() {
  echo -e "ğŸ’£  \033[00mthe test suite fails after 'mix deps.update $1' \033[0;31m"
  git checkout mix.lock
  exit 1
}

__commit__() {
  git add mix.lock
  git commit -m "Update \`$1\` dependency" --quiet
}

for dep in "$@"; do
  __update_dependency__ $dep
done
